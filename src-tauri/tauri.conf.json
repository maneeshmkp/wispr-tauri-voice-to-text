{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev"
  },
  "package": {
    "productName": "Wispr",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Wispr",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.wispr.app",
      "icon": [
        "icons/icon.ico"
      ]
    }
  }
}
